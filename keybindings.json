// Place your key bindings in this file to overwrite the defaults

[
{ "key": "ctrl+l",
  "command": "workbench.action.terminal.focus"},
{ "key": "ctrl+l", 
  "command": "workbench.action.focusActiveEditorGroup", "when": "terminalFocus"},
  
{ "key": "ctrl+shift+k", "command": "workbench.action.terminal.focusNext" },
{
    "key": "ctrl+shift+j",
    "command": "workbench.action.terminal.focusPrevious"
},
{
    "key": "ctrl+;",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
},
{
    "key": "ctrl+/",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
}
]

// to this file n VSCode
// files -> preferences -> key bindings settings -> Open Key Bind settings (JSON) left up corner
// or Ctrl + E and type 'keybindings.json'


// Ctrl + L -> toggle between terminal and editor focus
// Ctrl + Shift + K -> toggle between opened terminals
